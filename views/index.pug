extends layout.pug
block content 
  article.grid-container.portfolio-intro
    div 
      h1.text-light.font-righteous.wheat-text-shadow The Hit List
      p.lead.text-light.wheat-text-shadow
        | Projects I executed with pleasure.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each value in projects
        .cell
          a(href=`/project/${value.id}`)
            img.project.thumbnail.black-border.wheat-shadow(src=`${value.image_urls[0]}`)
            h5.font-righteous.text-light=value.project_name
      
